model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?  
  birthDate String?  
  phone     String?  
  gender    String?  
  plan_tier String   @default("standard")
  role      String   @default("USER")
  plan      String   @default("PERFORMANCE") 
  createdAt DateTime @default(now())
  workouts  Workout[]
  anamneses Anamnese[]
  diet      Diet?     
}

model Exercise {
  id           String   @id @default(uuid())
  name         String   @unique
  category     String
  videoUrl     String?
  instructions String?
  createdAt    DateTime @default(now())
  workoutExercise WorkoutExercise[]
}

model Workout {
  id        String   @id @default(uuid())
  name      String   
  goal      String?  
  level     String?  
  isVisible Boolean  @default(true) 
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises WorkoutExercise[]
  createdAt DateTime @default(now())
}

model WorkoutExercise {
  id         String   @id @default(uuid())
  workoutId  String
  workout    Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exerciseId String
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  restTime   Int      @default(60)
  title      String?  
  sets       Int      @default(3)
  reps       String   @default("12") 
  notes      String?  
  technique  String?  
  day        String   @default("A") 
}

model Anamnese {
  id               String   @id @default(uuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  peso             Float
  altura           Float
  imc              Float?   
  aguaIdeal        Float?   
  objetivo         String   
  nivel            String   
  frequencia       Int      
  tempoDisponivel  Int      @default(60) 
  limitacoes       String[] 
  cirurgias        String[] 
  equipamentos     String[] 
  refeicoesDia     Int?     @default(3)
  alergias         String[] 
  alimentosAversao String[] 
  suplementos      String[] 
  createdAt        DateTime @default(now())
}

model Diet {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  calories  Int      @default(2000)
  protein   Int      @default(150)
  carbs     Int      @default(200)
  fats      Int      @default(60)
  water     Int      @default(3000)
  meals     Meal[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Meal {
  id        String @id @default(uuid())
  dietId    String
  diet      Diet   @relation(fields: [dietId], references: [id], onDelete: Cascade)
  name      String 
  time      String 
  content   String 
  order     Int    @default(0) 
}

