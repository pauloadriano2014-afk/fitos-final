generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?  
  birthDate String?  
  phone     String?  
  gender    String?  
  
  // Controle de Acesso
  plan_tier String   @default("standard") // Mantive para nÃ£o perder dados antigos
  role      String   @default("USER")     // "ADMIN" ou "USER"
  
  // ðŸ‘‡ NOVO CAMPO: Usado pelo Admin para definir "PERFORMANCE" ou "ELITE"
  plan      String   @default("PERFORMANCE") 
  
  createdAt DateTime @default(now())
  
  workouts  Workout[]
  anamneses Anamnese[]
  diet      Diet?     // ðŸ‘‡ RelaÃ§Ã£o com a Dieta
}

model Exercise {
  id           String   @id @default(uuid())
  name         String   @unique
  category     String
  videoUrl     String?
  instructions String?
  createdAt    DateTime @default(now())
  
  workoutExercise WorkoutExercise[]
}

model Workout {
  id        String   @id @default(uuid())
  name      String   
  
  // Campos de metadados
  goal      String?  
  level     String?  

  // A TRAVA DE SEGURANÃ‡A
  isVisible Boolean  @default(true) 

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises WorkoutExercise[]
  createdAt DateTime @default(now())
}

model WorkoutExercise {
  id         String   @id @default(uuid())
  workoutId  String
  workout    Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exerciseId String
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  restTime   Int      @default(60)
  
  title      String?  
  sets       Int      @default(3)
  reps       String   @default("12") 
  
  // Campos tÃ©cnicos
  notes      String?  
  technique  String?  
  day        String   @default("A") 
}

model Anamnese {
  id               String   @id @default(uuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // 1. MÃ©tricas
  peso             Float
  altura           Float
  imc              Float?   
  aguaIdeal        Float?   

  // 2. Perfil
  objetivo         String   
  nivel            String   
  
  // 3. Disponibilidade
  frequencia       Int      
  tempoDisponivel  Int      @default(60) 

  // 4. SaÃºde
  limitacoes       String[] 
  cirurgias        String[] 
  equipamentos     String[] 

  // 5. NutriÃ§Ã£o
  refeicoesDia     Int?     @default(3)
  alergias         String[] 
  alimentosAversao String[] 
  suplementos      String[] 

  createdAt        DateTime @default(now())
}

// ðŸ‘‡ NOVOS MODELS PARA O GUIA ALIMENTAR (DIETA) ðŸ‘‡

model Diet {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Metas (Macros)
  calories  Int      @default(2000)
  protein   Int      @default(150)
  carbs     Int      @default(200)
  fats      Int      @default(60)
  water     Int      @default(3000)
  
  meals     Meal[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Meal {
  id        String @id @default(uuid())
  dietId    String
  diet      Diet   @relation(fields: [dietId], references: [id], onDelete: Cascade)
  
  name      String // Ex: "CafÃ© da ManhÃ£"
  time      String // Ex: "07:00"
  content   String // O texto livre que vocÃª vai digitar
  order     Int    @default(0) // Para manter a ordem das refeiÃ§Ãµes
}