generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?  
  birthDate String?  
  phone     String?  
  gender    String?  
  plan_tier String   @default("standard")
  role      String   @default("USER")
  plan      String   @default("PERFORMANCE") 
  createdAt DateTime @default(now())
  
  // Relacionamentos de Treino
  workouts  Workout[]
  anamneses Anamnese[]
  history   WorkoutHistory[] // Histórico de Cargas e XP
}

model Exercise {
  id             String   @id @default(uuid())
  name           String   @unique
  category       String
  videoUrl       String?
  instructions   String?
  createdAt      DateTime @default(now())
  workoutExercise WorkoutExercise[]
}

model Workout {
  id        String   @id @default(uuid())
  name      String   
  goal      String?  
  level     String?  
  isVisible Boolean  @default(true)
  startDate DateTime? @default(now()) // Data de início do planejamento
  endDate   DateTime? // Data de fim (vencimento)
  archived  Boolean   @default(false) // Se true, vai para o arquivo morto 
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises WorkoutExercise[]
  createdAt DateTime @default(now())
}

model WorkoutExercise {
  id         String   @id @default(uuid())
  workoutId  String
  workout    Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exerciseId String
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  restTime   Int      @default(60)
  title      String?  
  sets       Int      @default(3)
  reps       String   @default("12") 
  notes      String?  
  technique  String?  
  day        String   @default("A") 
  order      Int      @default(0) // Mantém a ordem dos exercícios
}

model Anamnese {
  id                 String   @id @default(uuid())
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Dados Físicos e de Treino (Nutrição removida)
  peso               Float
  altura             Float
  imc                Float?   
  objetivo           String   
  nivel              String   
  frequencia         Int      
  tempoDisponivel    Int      @default(60) 
  limitacoes         String[] 
  cirurgias          String[] 
  equipamentos       String[] 
  
  createdAt          DateTime @default(now())
}

model WorkoutTemplate {
  id        String   @id @default(uuid())
  name      String   
  goal      String   
  level     String   
  data      String   @db.Text 
  createdAt DateTime @default(now())
}

// Histórico para Gamification
model WorkoutHistory {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String   
  date      DateTime @default(now())
  xpEarned  Int      @default(0)
  duration  Int?     
  details   ExerciseHistory[]
}

model ExerciseHistory {
  id               String         @id @default(uuid())
  workoutHistoryId String
  workoutHistory   WorkoutHistory @relation(fields: [workoutHistoryId], references: [id], onDelete: Cascade)
  exerciseId       String
  exerciseName     String
  setNumber        Int
  weight           Float  
  reps             String 
}